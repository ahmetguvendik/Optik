@model List<Optik.DTO.GlassesDTO.ResultGlassesDto>


   <div class="glasses">
      <div class="container">
         <div class="row">
            <div class="col-md-10 offset-md-1">
               <div class="titlepage">
                  <h2>Gozluklerimiz</h2>
                  <p>Magazamizda Satista Olan Gozluklerimiz
                  </p>
               </div>
            </div>
         </div>
      </div>
     
      <div class="container-fluid">
         <div class="row">
            @foreach (var item in Model)
            {
               <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6">
                  <div class="glasses_box">

                     <figure><img src="@item.ImageURL" alt="#"/></figure>
                     <h3><span class="blu">TL </span>@item.Price</h3>
                     <p>@item.Model</p>

                  </div>
               </div>
            }
            

         </div>
        
         </div>
      
      </div>
      
